# reload config with
# cmd + shift + ,
# or
# ctrl + shift + ,

theme = Jellybeans

font-family = IosevkaTerm Nerd Font
font-style = Regular
font-size = 20
font-thicken = true

shell-integration = fish

window-padding-x = 20
window-padding-y = 20

cursor-style = block
cursor-style-blink = true
shell-integration-features = no-cursor

link-url = true

copy-on-select = true
window-save-state = always

macos-option-as-alt = true

# claude code?
keybind = shift+enter=text:\x1b\r

# pane management
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right
keybind = ctrl+w=close_surface

# create new splits
keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right

# resize splits
keybind = ctrl+shift+j=resize_split:up,10
keybind = ctrl+shift+k=resize_split:down,10
keybind = ctrl+shift+h=resize_split:left,10
keybind = ctrl+shift+l=resize_split:right,10
keybind = ctrl+shift+e=equalize_splits

# fullscreen (monocle) split
keybind = ctrl+a>f=toggle_split_zoom

# rename tabs
keybind = ctrl+shift+r=prompt_surface_title

# scrolling configuration
mouse-scroll-multiplier = 3
scrollback-limit = 10000
